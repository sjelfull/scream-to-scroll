.browser {
    cursor: none;
    display: flex;
    flex-direction: column;
    height: 100%;
}

.browser-input {
    display: flex;
    width: 100%;
    height: 50px;
    background-color: #fff;
    margin: 0;
}

.browser-input__input {
    flex-grow: 1;
}

.browser-window {
    flex-grow: 1;
    width: 100%;
    pointer-events: none;
}

.page {
    height: 100%;
}